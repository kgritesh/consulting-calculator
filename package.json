{
  "name": "consulting-calculator",
  "version": "0.0.1",
  "scripts": {
    "start": "run-p start:*",
    "start:re": "bsb -make-world -w",
    "start:cra": "craco start",
    "build": "bsb -make-world && craco build",
    "clean": "bsb -clean-world"
  },
  "keywords": [
    "rescript"
  ],
  "author": "Ritesh Kadmawala<ritesh@vertexcover.io>",
  "license": "MIT",
  "devDependencies": {
    "@craco/craco": "^6.1.0",
    "@rescript/react": "^0.10.1",
    "bs-platform": "*",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-scripts": "^4.0.2"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "autoprefixer": "^9.8.6",
    "bs-axios": "0.0.43",
    "postcss": "^7.0.35",
    "react-dom": "^17.0.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.2"
  },
  "eslintIgnore":["./src/**/*.bs.js"],
  "eslintConfig": {    
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-throw-literal": 0
    }
  },

  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
